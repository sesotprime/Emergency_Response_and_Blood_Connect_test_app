<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinePointV25"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinePointV75"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineH32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.34" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineH44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineH53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.53" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineH63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.63" />

    <Button
        android:layout_width="201dp"
        android:layout_height="67dp"
        android:background="@drawable/bg_theme_round_layer_shadow"
        android:enabled="true"
        android:onClick="allButtonClickHandler"
        android:text="@string/Individual"
        android:textColor="@color/White"
        app:layout_constraintBottom_toTopOf="@+id/guidelineH44"
        app:layout_constraintEnd_toStartOf="@+id/guidelinePointV75"
        app:layout_constraintStart_toStartOf="@+id/guidelinePointV25"
        app:layout_constraintTop_toTopOf="@+id/guidelineH32" />

    <Button
        android:layout_width="202dp"
        android:layout_height="66dp"
        android:background="@drawable/bg_theme_round_layer_shadow"
        android:enabled="true"
        android:onClick="allButtonClickHandler"
        android:text="@string/Facility"
        android:textColor="@color/White"
        app:layout_constraintBottom_toTopOf="@+id/guidelineH63"
        app:layout_constraintEnd_toStartOf="@+id/guidelinePointV75"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="@+id/guidelinePointV25" />


</androidx.constraintlayout.widget.ConstraintLayout>